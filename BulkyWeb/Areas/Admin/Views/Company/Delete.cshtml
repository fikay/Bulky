@model Company

<div class="card shadow border-0 my-5">
    <div class="card-header bg-secondary bg-gradient m-lg-0 py-3">
        <div class="row col-12 text-center">
            <h2 class="text-white py-2">Delete Product</h2>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post">
            <div class="mb-3">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" id="Name" disabled aria-describedby="ProductName">
            </div>
            <div class="mb-3">
                <label asp-for="StreetAddress" class="form-label"></label>
                <textarea asp-for="StreetAddress" class="form-control" id="streetAddress" disabled aria-describedby="streetAddress"></textarea>
                
            </div>
            <div class="mb-3">
                <label asp-for="City" class="form-label"></label>
                <input asp-for="City" class="form-control" id="City" disabled>
                

            </div>
            <div class="mb-3">
                <label asp-for="State" class="form-label"></label>
                <input asp-for="State" class="form-control" id="State" disabled>
                
            </div>
            <div class="mb-3">
                <label asp-for="PhoneNumber" class="form-label"></label>
                <input asp-for="PhoneNumber" class="form-control" id="PhoneNumber" disabled>
                
            </div>
            <div class="mb-3">
                <label asp-for="PostalCode" class="form-label"></label>
                <input asp-for="PostalCode" class="form-control" id="PostalCode" disabled>
                
            </div>
            <div class="row">
                <div class="col-6 col-md-3 offset-md-3">
                    <button type="submit" class="btn btn-primary form-control btn-danger ">Delete</button>
                </div>
                <div class="col-6 col-md-3 text-center align-items-center">
                    <a class=" btn btn-primary form-control" asp-controller="Product" asp-action="Index"> Back To List</a>
                </div>
            </div>
        </form>
    </div>
</div>

