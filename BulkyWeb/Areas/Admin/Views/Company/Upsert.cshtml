@model Company

<div class="card shadow border-0 my-5">
    <div class="card-header bg-secondary bg-gradient m-lg-0 py-3">
        <div class="row col-12 text-center">
            <h2 class="text-white py-2">@(Model.Id != 0 ? "Update" : "Create") Company</h2>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="flex-column">
            <form method="post" enctype="multipart/form-data">
                <div asp-validation-summary="All" class="text-danger"></div>
                <input asp-for="Id" hidden />
                <div class="row">
                    <div class="col-10">
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label"></label>
                            <input asp-for="Name" class="form-control" id="Name"  aria-describedby="ProductName">
                        </div>
                        <div class="mb-3">
                            <label asp-for="StreetAddress" class="form-label"></label>
                            <input asp-for="StreetAddress" class="form-control" id="streetAddress"  aria-describedby="streetAddress">

                        </div>
                        <div class="mb-3">
                            <label asp-for="City" class="form-label"></label>
                            <input asp-for="City" class="form-control" id="City" >


                        </div>
                        <div class="mb-3">
                            <label asp-for="State" class="form-label"></label>
                            <input asp-for="State" class="form-control" id="State" >

                        </div>
                        <div class="mb-3">
                            <label asp-for="PhoneNumber" class="form-label"></label>
                            <input asp-for="PhoneNumber" class="form-control" id="PhoneNumber" >

                        </div>
                        <div class="mb-3">
                            <label asp-for="PostalCode" class="form-label"></label>
                            <input asp-for="PostalCode" class="form-control" id="PostalCode" >

                        </div>
                        <div class="row">
                            <div class="col-6 col-md-3 offset-md-3">
                                <button type="submit" class="btn btn-primary form-control">Submit</button>
                            </div>
                            <div class="col-6 col-md-3 text-center align-items-center">
                                <a class=" btn btn-primary form-control" asp-controller="Company" asp-action="Index"> Back To Company List</a>
                            </div>

                        </div>
                    </div>
                </div>


            </form>

        </div>
    </div>
</div>

