@{
}

@model Category

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient m-lg-0 py-3">
        <div class="row col-12 text-center">
            <h2 class="text-white py-2">Delete Category</h2>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post">
            <div class="mb-3">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" id="categoryName" disabled aria-describedby="categoryName">
            </div>
            <div class="mb-3">
                <label asp-for="DisplayOrder" class="form-label"></label>
                <input asp-for="DisplayOrder" class="form-control" disabled id="DisplayOrder">
            </div>
            <div class="row">
                <div class="col-6 col-md-3 offset-md-3">
                    <button type="submit" class="btn btn-primary form-control btn-danger ">Delete</button>
                </div>
                <div class="col-6 col-md-3 text-center align-items-center">
                    <a class=" btn btn-primary form-control" asp-controller="Category" asp-action="Index"> Back To List</a>
                </div>
            </div>
        </form>
    </div>
</div>

