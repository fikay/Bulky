@{
}
@model Category

<form method="post">
    <div>
        <h1>Edit Category</h1>
    </div>
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" id="categoryName" aria-describedby="categoryName" >
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="DisplayOrder" class="form-label"></label>
        <input asp-for="DisplayOrder" class="form-control" id="DisplayOrder" >
        <span asp-validation-for="DisplayOrder" class="text-danger"></span>

    </div>
    <div class="row">
        <div class="col-6 col-md-3">
            <button type="submit" class="btn btn-primary form-control">Submit</button>
        </div>
        <div class="col-6 col-md-3 text-center align-items-center">
            <a class=" btn btn-primary form-control" asp-controller="Category" asp-action="Index"> Back To List</a>
        </div>

    </div>

</form>